                <shape android:shape="oval">
                    <size
                        android:width="56dp"
                        android:height="56dp"/>
                    <corners android:radius="28dp"/>
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_lock_open_black_24dp"/>
        </layer-list>
    </item>

</selector>